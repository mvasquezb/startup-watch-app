<Page class="page"
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <GridLayout columns="*" rows="auto, *">
        <SearchBar class="search-bar" row="0" col="0" 
            hint="{{ searchHint }}"
            text="{{ filterText }}"
            clear="{{ () => filterItems(filterText) }}"
            submit="{{ () => filterItems(filterText) }}"
            loaded="searchBarLoaded" />

        <ListView row="1" col="0" visibility="{{ !loading ? 'visible' : 'collapse' }}" items="{{ visibleItems }}" itemTap="{{ onItemTap }}" class="list-group">
            <ListView.itemTemplate>
                <StackLayout orientation="horizontal" class="list-group-item">
                    <Label text="{{ name }}" textWrap="true" class=""></Label>
                    <StackLayout orientation="vertical" class="list-group-item">
                        <Label text="{{ industry }}" textWrap="true"></Label>
                        <Label text="{{ solution }}" textWrap="true"></Label>
                    </StackLayout>
                    <!-- Font Awesome heart icon -->
                    <Button loaded="buttonLoaded" text="&#xf004;" onTap="onFavouriteTap" class="btn btn-favourite {{ favourite ? 'fas' : 'far' }}"></Button>
                    <Label text="{{ favourite ? 'favourite' : 'no favourite' }}" textWrap="true" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>