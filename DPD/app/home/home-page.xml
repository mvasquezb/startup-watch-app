<Page class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="DPD"></Label>
        <ActionItem
            tap="{{ logout }}"
            ios.position="left"
            android.position="actionBar"
            text="Logout">
        </ActionItem>
    </ActionBar>

    <GridLayout>
        <Label text="{{ currentUser.username }}"></Label>
    </GridLayout>
</Page>
